@model WebApplication3.Models.User

<h2>회원가입</h2>

<form class= ="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label>사용자 ID</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="입력하세요" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>

    <div class="form-group">
        <label>사용자 비밀번호</label>
        <input type="text" class="form-control" asp-for="UserPassword" placeholder="입력하세요" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <label>사용자 이름</label>
        <input type="text" class="form-control" asp-for="UserName" placeholder="입력하세요" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">
        <button type ="submit" class="btn btn-primary" onclick="javacsript:btn()">회원가입</button>
        <a class="btn btn-warning" href="#"> 취소</a>
    </div>


</form>

<script>
    function btn() {
        alert('신청완료');

    }

</script>
